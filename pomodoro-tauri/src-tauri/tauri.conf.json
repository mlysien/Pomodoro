{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pomodoro-tauri",
  "version": "0.1.0",
  "identifier": "com.pomodoro-tauri.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "decorations": false,
        "title": "pomodoro-tauri",
        "width": 400,
        "height": 500,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/tomato.png"
    ]
  }
}
