{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pomodoro Timer",
  "version": "1.0.0",
  "identifier": "com.pomodoro-timer.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "decorations": false,
        "title": "Pomodoro Timer",
        "width": 400,
        "height": 500,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/tomato.png"
    ],
    "category": "Productivity",
    "copyright": "Built with ❤️ by AI"
  }
}
